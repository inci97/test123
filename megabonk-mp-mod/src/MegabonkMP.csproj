<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>MegabonkMP</AssemblyName>
    <RootNamespace>MegabonkMP</RootNamespace>
    <Version>0.1.0</Version>
    <Authors>Megabonk MP Team</Authors>
    <Description>Multiplayer mod for Megabonk</Description>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Output to BepInEx plugins folder -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <OutputPath>$(MEGABONK_PATH)\BepInEx\plugins\MegabonkMP\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <!-- BepInEx 6 IL2CPP references -->
  <ItemGroup>
    <!-- BepInEx Core -->
    <Reference Include="BepInEx.Core">
      <HintPath>$(MEGABONK_PATH)\BepInEx\core\BepInEx.Core.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="BepInEx.Unity.IL2CPP">
      <HintPath>$(MEGABONK_PATH)\BepInEx\core\BepInEx.Unity.IL2CPP.dll</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- IL2CPP Interop -->
    <Reference Include="Il2CppInterop.Runtime">
      <HintPath>$(MEGABONK_PATH)\BepInEx\core\Il2CppInterop.Runtime.dll</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- Harmony -->
    <Reference Include="0Harmony">
      <HintPath>$(MEGABONK_PATH)\BepInEx\core\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- Unity assemblies from interop folder -->
    <Reference Include="UnityEngine">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.UI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.UIModule">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.UIModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.PhysicsModule">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.PhysicsModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.InputLegacyModule">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\UnityEngine.InputLegacyModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    
    <!-- Game assemblies (generated by BepInEx) -->
    <Reference Include="Assembly-CSharp">
      <HintPath>$(MEGABONK_PATH)\BepInEx\interop\Assembly-CSharp.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

</Project>
